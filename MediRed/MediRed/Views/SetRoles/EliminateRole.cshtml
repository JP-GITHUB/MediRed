
@model  MediRed.Models.RoleViewModel

@{
    ViewBag.Title = "EliminateRole";
}

<h2>Eliminar un rol del sistema</h2>
<p>
    Escoja el rol a eliminar
</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <table class="table">
        <tr>
            <th>
                Roles del Sistema
            </th>
            <th></th>
        </tr>

        @foreach (var role in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => role.Name)
                </td>
                <td>

                    @Html.ActionLink("Eliminar", "EliminateRole", new { roleId = role.Id })
                </td>
            </tr>
        }
    </table>
}

<div>
    @Html.ActionLink("Volver", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
