@model MediRed.Models.UserViewModel

@{
    ViewBag.Title = "Roles";
}

<h2>Roles del Usuario : @Model.UserName</h2>
<p>
    @Html.ActionLink("Volver a la lista", "Index") |
    @Html.ActionLink("Agregar Rol", "AddRole", new { id= Model.UserId})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Roles.First().RoleName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Roles)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
            <td>
                @Html.ActionLink("Eliminar", "DeleteRole", new { id = item.RoleId })
            </td>
        </tr>
    }
</table>
