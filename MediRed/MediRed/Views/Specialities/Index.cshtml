@model IEnumerable<MediRed.Models.Speciality>

@{
    ViewBag.Title = "Index";
}

<h2>Especialidades Médicas</h2>

<p>
    @Html.ActionLink("Agregar una nueva especialidad", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.SpecialityId }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.SpecialityId }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.SpecialityId })
        </td>
    </tr>
}

</table>
