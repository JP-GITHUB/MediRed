@model IEnumerable<MediRed.Models.Medicine>

@{
    ViewBag.Title = "Index";
}

<h2>Medicamentos</h2>

<p>
    @Html.ActionLink("Agregar nuevo medicamento", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Concentration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Concentration)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.MedicineId }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.MedicineId }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.MedicineId })
        </td>
    </tr>
}

</table>
