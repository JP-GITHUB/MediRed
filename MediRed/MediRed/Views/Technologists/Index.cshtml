@model IEnumerable<MediRed.Models.Technologist>

@{
    ViewBag.Title = "Index";
}

<h2>Tecnólogos</h2>

<p>
    @Html.ActionLink("Registrar un nuevo Tecnólogo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            País
        </th>
        <th>
            Nombre
        </th>
        <th>
            Apellido
        </th>
        <th>
            Email
        </th>
        <th>
            Teléfono
        </th>
        <th>
           Rut
        </th>
        <th>
          Laboratorio
        </th>
        <th>
            Especialidad
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Country.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rut)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Laboratory.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Speciality.Description)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
