@model IEnumerable<MediRed.Models.Attention>

@{
    ViewBag.Title = "Historial";
}

<h2>Historial Médico</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Detail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Diagnostic.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Diagnostic.Treatment.Detail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Diagnostic.RedDiagnostic)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Medic.FirstName) Médico
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Medic.Rut) Médico
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Detail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diagnostic.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diagnostic.Treatment.Detail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diagnostic.RedDiagnostic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Medic.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Medic.Rut)
            </td>
            <td>
                @*@Html.ActionLink("Detalles", "Details", new { id=item.HistoryId })*@
            </td>
        </tr>
    }

</table>
