@model IEnumerable<MediRed.Models.Attention>

@{
    ViewBag.Title = "Index";
}

<h2>Atenciones Médicas</h2>

<p>
    @Html.ActionLink("Crear una nueva atención médica", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Descripción
        </th>
        <th>
           Nombre del Paciente
        </th>
        <th>
           Médico
        </th>
        <th>
          Detalle
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Diagnostic.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.History.PatientName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Medic.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Detail)
        </td>
        <td>
            @*@Html.ActionLink("Editar", "Edit", new { id=item.AttentionId }) |*@
            @Html.ActionLink("Detalles", "Details", new { id=item.AttentionId }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.AttentionId })
        </td>
    </tr>
}

</table>
